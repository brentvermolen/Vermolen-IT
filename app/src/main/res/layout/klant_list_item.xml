<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:padding="10dp"
        android:background="@drawable/border_voorraad_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naam Voornaam"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lblWoonplaats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX Woonplaats"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email adres"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblTelNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefoon nr."
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>